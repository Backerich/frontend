{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "./temp",
        "strict": true,
        "noImplicitAny": false,
        "lib": ["es2015", "dom"],
        "jsx": "react",
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "baseUrl": ".",
        "removeComments": true,
        "allowJs": false
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules", 
        "./**/*.d.ts", 
        "./**/*.js"
    ]
}